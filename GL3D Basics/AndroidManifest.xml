<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="il.co.gadiworks.gl3d"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" 
    			 android:label="@string/app_name"
    			 android:debuggable="true">
        <activity android:name=".GL3DBasicsStarter"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
				  android:configChanges="keyboard|keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Vertices3Test"
                  android:label="Vertices3 Test"
                  android:screenOrientation="landscape"
                  android:configChanges="keyboard|keyboardHidden|orientation" />
        <activity android:name=".PerspectiveTest"
                  android:label="Perspective Test"
                  android:screenOrientation="landscape"
                  android:configChanges="keyboard|keyboardHidden|orientation" />
        <activity android:name=".ZBufferTest"
                  android:label="ZBuffer Test"
                  android:screenOrientation="landscape"
                  android:configChanges="keyboard|keyboardHidden|orientation" />
    </application>
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-sdk android:minSdkVersion="10" />
</manifest>