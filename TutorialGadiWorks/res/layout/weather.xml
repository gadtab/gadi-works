<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView android:text="City" android:layout_width="wrap_content"
		android:layout_height="wrap_content"></TextView>
	<EditText android:layout_height="wrap_content"
		android:layout_width="match_parent" android:id="@+id/etCity">
	</EditText>
	<TextView android:text="State" android:layout_width="wrap_content"
		android:layout_height="wrap_content"></TextView>
	<EditText android:layout_height="wrap_content"
		android:layout_width="match_parent" android:id="@+id/etState"></EditText>
	<Button android:text="Button" android:id="@+id/bWeather"
		android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
	<TextView android:text="Current Weather" android:id="@+id/tvWeather"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</LinearLayout>
