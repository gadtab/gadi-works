<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/gadiworks_bg">
	<TextView 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/hello" 
		android:textColor="#f10123d1"
		/>
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="This is what is displaying" 
		android:gravity="center" 
		android:textColor="#ff012201"
	    />
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="@string/title" 
		android:textColor="#f11ff1f1"
		android:textSize="25dp"
		android:textStyle="bold"
		/>
		
	<ScrollView 
		android:layout_width="fill_parent"
		android:layout_height="200dp">
		<LinearLayout
			android:orientation="vertical" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<Button
				android:id="@+id/btnTutorial1"
			 	android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="RadioButtons"
				android:textStyle="bold"
				android:textSize="25dp"
				/>
			<Button 
				android:id="@+id/btnTutorial2" 
				android:layout_height="wrap_content" 
				android:text="List View" 
				android:layout_width="fill_parent" 
				android:textSize="25dp" 
				android:textStyle="bold" 
				/>
			<Button 
				android:id="@+id/btnTutorial3" 
				android:layout_height="wrap_content" 
				android:text="Choose a Wallpaper" 
				android:layout_width="fill_parent" 
				android:textSize="25dp" 
				android:textStyle="bold" 
				/>
			<Button 
				android:id="@+id/btnTutorial4" 
				android:layout_height="wrap_content" 
				android:text="Download Music To Phone" 
				android:layout_width="fill_parent" 
				android:textSize="25dp" 
				android:textStyle="bold" 
				/>
			<Button 
				android:id="@+id/btnTutorial5" 
				android:layout_height="wrap_content" 
				android:text="Cloud Animation" 
				android:layout_width="wrap_content" 
				android:textSize="25dp" 
				android:textStyle="bold"
				android:background="@drawable/custombutton"
				android:layout_gravity="center"
				/>
			<Button 
				android:id="@+id/btnTutorial6" 
				android:layout_height="wrap_content" 
				android:text="Graphics via View" 
				android:layout_width="fill_parent" 
				android:textSize="25dp" 
				android:textStyle="bold" 
				/>
			<Button 
				android:id="@+id/btnTutorial7" 
				android:layout_height="wrap_content" 
				android:text="Graphics via SurfaceView" 
				android:layout_width="fill_parent" 
				android:textSize="25dp" 
				android:textStyle="bold" 
				/>
			<Button 
				android:id="@+id/btnTutorial8" 
				android:layout_height="wrap_content" 
				android:text="Tutorial 8" 
				android:layout_width="fill_parent" 
				android:textSize="25dp" 
				android:textStyle="bold" 
				/>
			<Button 
				android:id="@+id/btnTutorial9" 
				android:layout_height="wrap_content" 
				android:text="Tutorial 9" 
				android:layout_width="fill_parent" 
				android:textSize="25dp" 
				android:textStyle="bold" 
				/>
			<Button 
				android:id="@+id/btnTutorial10" 
				android:layout_height="wrap_content" 
				android:text="Tutorial 10" 
				android:layout_width="fill_parent" 
				android:textSize="25dp" 
				android:textStyle="bold" 
				/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
